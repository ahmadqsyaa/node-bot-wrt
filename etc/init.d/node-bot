#!/bin/sh /etc/rc.common
# Copyright (c) 2011-2015 OpenWrt.org

START=99

separator() {
	echo -e "\033[36mâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\033[0m"
}

info() {
	echo -e "\033[46;30m$1\033[0m"
}

warn() {
	echo -e "\033[41;37m$1\033[0m"
}

success() {
	echo -e "\033[42;30m$1\033[0m"
}

start() {
	separator
	pgrep -f /root/node-bot-wrt/index.js > /dev/null
	if [ $? -eq 0 ]; then
		warn "âš ï¸ bot already running, stopping first..."
		kill $(pgrep -f /root/node-bot-wrt/index.js) >/dev/null 2>&1
		sleep 2
	fi
	cd /root/node-bot-wrt && node /root/node-bot-wrt/index.js >/dev/null 2>&1 &
	success "ðŸš€ starting bot..."
	separator
	return 0
}

stop() {
	separator
	info "ðŸ›‘ stopping bot..."
	sleep 2
	kill $(pgrep -f /root/node-bot-wrt/index.js) >/dev/null 2>&1
	success "âœ… bot stopped"
	separator
}

restart(){
	stop
	sleep 2
	start
}

boot() {
	separator
	info "â³ booting bot (waiting 10 sec)..."
	sleep 10
	/root/node-bot-wrt/lib/bot/booting.sh >/dev/null
	(start >/dev/null 2>&1) &
	success "âœ¨ bot boot completed!"
	separator
	return 0
}