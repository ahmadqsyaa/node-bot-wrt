    ;;
  "29")
    echo -e 'HYBRID EVDO rev.A'
    ;;
  "30")
    echo -e 'HYBRID EVDO rev.B'
    ;;
  "31")
    echo -e 'eHRPD rel.0'
    ;;
  "32")
    echo -e 'eHRPD rel.A'
    ;;
  "33")
    echo -e 'eHRPD rel.B'
    ;;
  "34")
    echo -e 'HYBRID eHRPD rel.0'
    ;;
  "35")
    echo -e 'HYBRID eHRPD rel.A'
    ;;
  "36")
    echo -e 'HYBRID eHRPD rel.B'
    ;;
  "41")
    echo -e 'UMTS (3G)'
    ;;
  "42")
    echo -e 'HSDPA (3G)'
    ;;
  "43")
    echo -e 'HSUPA (3G)'
    ;;
  "44")
    echo -e 'HSPA (3G)'
    ;;
  "45")
    echo -e 'HSPA+ (3.5G)'
    ;;
  "46")
    echo -e 'DC-HSPA+ (3.5G)'
    ;;
  "61")
    echo -e 'TD-SCDMA (3G)'
    ;;
  "62")
